{
  "name": "simple-e2p",
  "author": "nskazki@gmail.com",
  "license": "MIT",
  "version": "1.0.2",
  "description": "A way to turn a one-time event into a promise",
  "homepage": "https://github.com/nskazki/simple-e2p",
  "keywords": [
    "e2p",
    "event-to-promise"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nskazki/simple-e2p.git"
  },
  "bugs": {
    "url": "https://github.com/nskazki/simple-e2p/issues"
  },
  "main": "src-build",
  "scripts": {
    "prepublish": "npm run build",
    "build": "babel src --retain-lines --out-dir src-build",
    "eslint": "eslint $(find . -not -path '*/*-build/*' -and -not -path '*/node_modules/*' -type f -name '*.es6')",
    "mocha": "mocha test",
    "test": "npm run eslint && npm run mocha"
  },
  "dependencies": {
    "bluebird": "^3.1.1",
    "event-to-promise": "^0.6.0",
    "lodash": "^3.10.1"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.6",
    "eslint": "1.10.1",
    "eslint-plugin-mocha": "^1.1.0",
    "mocha": "^2.3.4"
  }
}
